<nav class="nav-top @NavMenuCssClass">
    <div class="nav-brand">
        <a href="#">
            ProduceExchangeHub
        </a>
    </div>

    <ul class="nav-right-buttons">
        <li>
            Register
        </li>
        <li>
            Login
        </li>
    </ul>

    <a href="javascript:void(0);" class="menu-icon @changeMenuButtonClass" @onclick=ToggleNavMenu>
        <div class="bar1"></div>
        <div class="bar2"></div>
        <div class="bar3"></div>
    </a>
</nav>

@code {
    private bool toggleNavMenu = false;

    private string? NavMenuCssClass => toggleNavMenu ? "responsive" : null;
    private string? changeMenuButtonClass => toggleNavMenu ? "change" : null;

    private void ToggleNavMenu()
    {
        toggleNavMenu = !toggleNavMenu;
    }
}
